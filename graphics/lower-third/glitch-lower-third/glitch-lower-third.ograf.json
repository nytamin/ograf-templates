{
  "$schema": "https://ograf.ebu.io/v1/specification/json-schemas/graphics/schema.json",
  "id": "lower-third-glitch",
  "version": "1.0.0",
  "name": "Glitch Lower Third",
  "description": "A digital glitch effect lower third with corrupted text layers, RGB distortion, and VHS-style artifacts.",
  "author": {
    "name": "OGraf Templates"
  },
  "main": "lower-third.js",
  "supportsRealTime": true,
  "supportsNonRealTime": false,
  "stepCount": 1,
  "schema": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "title": {
        "type": "string",
        "title": "Title",
        "default": "Breaking News"
      },
      "subtitle": {
        "type": "string",
        "title": "Subtitle",
        "default": "Live from the field"
      },
      "glitchColor1": {
        "type": "string",
        "title": "Glitch Color 1 (Red Channel)",
        "default": "#ff0055"
      },
      "glitchColor2": {
        "type": "string",
        "title": "Glitch Color 2 (Cyan Channel)",
        "default": "#00ffff"
      },
      "textColor": {
        "type": "string",
        "title": "Text Color",
        "default": "#ffffff"
      }
    },
    "required": ["title"]
  },
  "renderRequirements": [
    {
      "resolution": {
        "width": { "ideal": 1920 },
        "height": { "ideal": 1080 }
      },
      "frameRate": { "ideal": 50 },
      "accessToPublicInternet": { "ideal": false }
    }
  ]
}
